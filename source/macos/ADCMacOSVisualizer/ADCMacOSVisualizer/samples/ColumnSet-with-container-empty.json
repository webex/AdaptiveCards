{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3",
    "minHeight": "300px",
    "body": [
        {
            "type": "Container",
            "style": "accent",
            "minHeight": "200px",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": "stretch",
                            "style": "emphasis"
                        },
                        {
                            "type": "Column",
                            "width": "stretch",
                            "style": "good"
                        }
                    ],
                    "height": "auto"
                },
                {
                    "type": "Container",
                    "style": "attention",
                    "height": "auto"
                }
            ]
        }
    ]
}
