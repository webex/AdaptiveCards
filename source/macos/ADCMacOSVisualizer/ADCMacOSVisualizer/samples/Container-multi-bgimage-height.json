{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3",
    "minHeight": "400px",
    "body": [
        {
            "type": "Container",
            "height": "stretch",
            "backgroundImage": "https://adaptivecards.io/content/AlkiBeach.jpg",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "What a beautiful background"
                }
            ]
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "New TextBlock",
                    "wrap": true
                }
            ],
            "height": "stretch",
            "style": "emphasis"
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "New TextBlock",
                    "wrap": true
                }
            ],
            "style": "accent"
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "New TextBlock",
                    "wrap": true
                }
            ],
            "height": "stretch",
            "style": "good"
        }
    ]
}
