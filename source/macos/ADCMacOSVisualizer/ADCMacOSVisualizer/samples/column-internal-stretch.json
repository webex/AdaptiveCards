{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "auto",
                    "style": "good",
                    "verticalContentAlignment": "Center",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "New TextBlock",
                            "wrap": true,
                            "isVisible": false,
                            "height": "stretch",
                            "id": "1"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "style": "good",
                    "verticalContentAlignment": "Center",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "New TextBlock",
                            "wrap": true,
                            "isVisible": false
                        }
                    ]
                }
            ],
            "height": "stretch"
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "auto",
                    "style": "good",
                    "items": [
                        {
                            "type": "Container",
                            "style": "warning"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "style": "good"
                }
            ]
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.ToggleVisibility",
                    "title": "Action.ToggleVisibility",
                    "targetElements": [
                        "1"
                    ]
                }
            ]
        }
    ],
    "minHeight": "400px"
}
