{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.0",
    "body": [
        {
            "type": "TextBlock",
            "text": "Default text input"
        },
        {
            "type": "Input.Text",
            "id": "defaultInputId",
            "placeholder": "enter comment",
            "maxLength": 500
        },
        {
            "type": "TextBlock",
            "text": "Multiline text input"
        },
        {
            "type": "Input.Text",
            "id": "multilineInputId",
            "placeholder": "enter comment",
            "maxLength": 50,
            "isMultiline": true
        },
        {
            "type": "TextBlock",
            "text": "Pre-filled value"
        },
        {
            "type": "Input.Text",
            "id": "prefilledInputId",
            "placeholder": "enter comment",
            "maxLength": 500,
            "isMultiline": true,
            "value": "This value was pre-filled"
        }
    ],
    "actions": [
        {
            "type": "Action.Submit",
            "title": "OK"
        }
    ]
}
