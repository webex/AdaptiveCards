        {
            "type": "Input.ChoiceSet",
            "choices": [
                {
                    "title": "Choice 1",
                    "value": "Choice 1"
                },
                {
                    "title": "Choice 2",
                    "value": "Choice 2"
                }
            ],
            "placeholder": "Placeholder text",
            "isMultiSelect": true,
            "style": "expanded",
            "id": "toggleButton"
        },
        {
            "type": "Input.Toggle",
            "title": "New Input.Toggle",
            "id": "InputToggle"
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.ShowCard",
                    "title": "Action.ShowCard",
