        },
        {
            "type": "Input.Date",
            "id": "inputDate"
        },
        {
            "type": "Input.Time",
            "id": "inputTime"
        },
        {
            "type": "Input.ChoiceSet",
            "choices": [
                {
                    "title": "Choice 1",
                    "value": "Choice 1"
                },
                {
                    "title": "Choice 2",
                    "value": "Choice 2"
                },
                {
                    "title": "Choice 3",
