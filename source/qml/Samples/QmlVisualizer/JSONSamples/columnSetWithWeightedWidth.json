{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.0",
    "body": [
        {
            "type": "ColumnSet",
            "style": "emphasis",
            "columns": [
                {
                    "type": "Column",
                    "width": 30,
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "WeightedWidth:30%"
                        }
                    ],
                    "separator": true
                },
                {
                    "type": "Column",
                    "width": 70,
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "WeightedWidth:70%"
                        }
                    ]
                }
            ]
        }
    ]
}
